# ============================================
# EchoSphere Environment Variables
# Copy to .env and fill in values
# ============================================

# Application
DEBUG=true

# LiveKit
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# AWS (for Transcribe, Bedrock, Polly)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=ap-northeast-1

# AWS AI Configuration
AWS_REGION=ap-northeast-1

# AI Models (AWS)
STT_LANGUAGE=ja-JP
LLM_MODEL=jp.anthropic.claude-sonnet-4-5-20250929-v1:0
TTS_VOICE=Kazuha
TTS_LANGUAGE=ja-JP

# Agent Behavior
# AGENT_INSTRUCTIONS=Your custom system prompt here
# AGENT_GREETING_PROMPT=Custom greeting prompt here
MAX_RESPONSE_TOKENS=256

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=echosphere
DATABASE_PASSWORD=echosphere_dev
DATABASE_NAME=echosphere

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Logging
LOG_LEVEL=INFO

# OpenTelemetry (Tracing)
OTEL_ENABLED=false
OTEL_SERVICE_NAME=echo-sphere-agent
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
